}

<div class="row">
    <div class="alert">
        <span id="status"></span>
    </div>
</div>

<div class="row">
    <div class="btn-group btn-group-justified">
        <div class="btn-group">
            <button name="l1" class="btn btn-danger">Lâmpada 1</button>
        </div>
        <div class="btn-group">
